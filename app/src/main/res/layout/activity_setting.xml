<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sgmcommunity.chlo24.activity.Setting">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0d5aba"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/web_view_ic_back_white" />

        <ImageView
            android:id="@+id/home_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:src="@drawable/web_view_ic_home" />

        <TextView
            android:id="@+id/title_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="설정"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <Switch
                android:id="@+id/gps_switch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingRight="30dp"
                android:scaleX="1.3"
                android:scaleY="1.3" />

            <Switch
                android:id="@+id/auto_update_switch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingRight="30dp"
                android:scaleX="1.3"
                android:scaleY="1.3" />

            <Switch
                android:id="@+id/push_switch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingRight="30dp"
                android:scaleX="1.3"
                android:scaleY="1.3" />

            <Switch
                android:id="@+id/auto_login_switch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingRight="30dp"
                android:scaleX="1.3"
                android:scaleY="1.3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="GPS 설정"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="자동 업데이트"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="알림 설정"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="자동 로그인"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
